<%= form_with(model: user_book) do |f| %>
  <% if user_book.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(user_book.errors.count, "error") %> prohibited this record from being saved:</h2>
      <ul>
        <% user_book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :user_id, 'User' %>
    <%= f.collection_select :user_id, User.all, :id, :username, prompt: 'Select a user', class: 'form-select' %>
  </div>

  <div class="mb-3">
    <%= f.label :book_id, 'Book' %>
    <%= f.collection_select :book_id, Book.all, :id, :title, prompt: 'Select a book', class: 'form-select' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
