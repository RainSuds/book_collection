<h1>Users</h1>

<div class="mb-3 text-end">
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
  <%= link_to 'User Books', user_books_path, class: 'btn btn-secondary' %>
  <%= link_to 'Books', books_path, class: 'btn btn-secondary' %>
  </div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td>
          <%= link_to 'Show', user_path(user), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
