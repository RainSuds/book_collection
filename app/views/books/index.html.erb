<h1 class="text-center my-4">Book Collection</h1>

<div class="text-end mb-3">
  <%= link_to "Add New Book", new_book_path, class: "btn btn-primary" %>
  <%= link_to "Users", users_path, class: "btn btn-secondary" %>
  <%= link_to "User Books", user_books_path, class: "btn btn-secondary" %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Price</th>
      <th>Published Date</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.price.present? ? number_to_currency(book.price) : "-" %></td>
        <td><%= book.published_date.present? ? book.published_date.strftime("%B %d, %Y") : "-" %></td>
        <td>
          <%= link_to "Show", book_path(book), class: "btn btn-info btn-sm" %>
          <%= link_to "Edit", edit_book_path(book), class: "btn btn-warning btn-sm" %>
          <%= link_to "Delete", delete_book_path(book), class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
