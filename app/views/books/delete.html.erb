<%= link_to "Back to Book List", books_path, class: "btn btn-secondary mb-3" %>

<div class="books delete">
  <h2>Delete Book</h2>

  <p>Are you sure you want to delete "<strong><%= @book.title %></strong>"?</p>

  <div class="form-buttons">
    <%= button_to "Confirm Delete", book_path(@book), method: :delete, class: "btn btn-danger" %>
    <%= link_to "Cancel", books_path, class: "btn btn-secondary" %>
  </div>
</div>
